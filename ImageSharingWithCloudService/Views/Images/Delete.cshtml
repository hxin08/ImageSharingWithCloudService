@model ImageSharingWithCloudService.Models.ImageView

@{
    ViewBag.Title = "Delete Image";
}

<h2>@ViewBag.Title</h2>

@{ Html.BeginForm("Delete", "Images", FormMethod.Post); }

<fieldset>
    <legend>Enter Image Information</legend>
     @Html.AntiForgeryToken()
    <p>
        <img src="@Url.Content("~/Content/Images/img-" + @Model.Id + ".jpg")" />
    </p>

    <p>Image id: @Model.Id </p>

    <p>Tag: @Model.TagName</p>

    <p>Caption: @Model.Caption </p>

    <p>Description:
        <br />
        @Model.Description</p>

    <p>Date taken: @Model.DateTaken.ToShortDateString()</p>

    <p>Uploader: @Model.Userid</p>

    <p>
        <input type="submit" value="Confirm Delete" />
    </p>
</fieldset>

@{ Html.EndForm(); }
